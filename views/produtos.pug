extends layout.pug

block content
    form(method="post", target="/produtos")
        input(type="numeric", name="codigo")
        input(type="name", name="nome")
        input(type="submit", value="Enviar")
    table
        thead
            tr
                td Codigo
                td Nome
        tbody
            for produto in produtos
                tr
                    td= produto.codigo
                    td= produto.nome